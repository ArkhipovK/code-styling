{
	"extends": [
		"tslint:recommended",
		"tslint-config-prettier"
	],
	"rulesDirectory": [
		"tslint-plugin-prettier"
	],
	"rules": {
		"prettier": [
			true
		],
		"no-debugger": false,
		"no-console": false,
		"eofline": false,
		"semicolon": [
			true,
			"always",
			"ignore-bound-class-methods"
		],
		"linebreak-style": [true, "CRLF"],
		"trailing-comma": false,
		"arrow-parens": false,
		"object-literal-sort-keys": false,
		"ordered-imports": false,
		"no-trailing-whitespace": false,
		"variable-name": [
			true,
			"ban-keywords",
			"check-format",
			"allow-leading-underscore",
			"allow-pascal-case"
		],
		"no-bitwise": false,
		"jsx-alignment": true,
		"jsx-wrap-multiline": false
	},
	"linterOptions": {
		"exclude": [
			"**/*.js",
			"node_modules/**/*.ts",
			"dist/**/*.ts"
		]
	}
}